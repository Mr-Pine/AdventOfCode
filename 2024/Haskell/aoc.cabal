                    , Day16.ReindeerMaze
                    , Day17.ChronospatialComputer
                    , Day18.RamRun

    -- LANGUAGE extensions used by modules in this package.
    other-extensions: NamedFieldPuns
                    , OverloadedRecordDot
                    , RecordWildCards
                    , PartialTypeSignatures

    build-depends:    base ^>=4.17.2.0
                    , megaparsec
                    , text
                    , pretty-simple
                    , MissingH
                    , advent-of-code-api
                    , directory
                    , containers
                    , array
                    , html-parse
                    , ghc
                    , regex-tdfa
                    , safe
                    , utility-ht
                    , lens
                    , psqueues
                    , hashable
                    , mtl
    hs-source-dirs:   app
    default-language: Haskell2010
