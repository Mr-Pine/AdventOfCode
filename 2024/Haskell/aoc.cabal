    other-modules: Util
                    , Day1.HistorianHysteria
                    , Day2.RedNosedReports
                    , Day3.MullItOver
                    , Day4.CeresSearch
                    , Day5.PrintQueue
                    , Day6.GuardGallivant
                    , Day7.BridgeRepair
                    , Day8.ResonantCollinearity
                    , Day9.DiskFragmenter
                    , Day10.HoofIt
                    , Day11.PlutonianPebbles
